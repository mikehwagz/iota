---
layout: base.njk
permalink: /{{ p.slug }}/
pagination:
  alias: p
  data: pages
  size: 1
renderData:
  title: "{{ p.title }}"
---
<div class="abs fill" data-router-view="default">
  <a class="logo db fix bg-red z10" href="/">
    <div class="rel x y">
      <div class="logo__letter f45 abs top left tc mt25 ml30">I</div>
      <div class="logo__letter f45 abs top right tc mt25 mr30">O</div>
      <div class="logo__letter f45 abs bottom left tc mb25 ml30">T</div>
      <div class="logo__letter f45 abs bottom right tc mb25 mr30">A</div>
    </div>
  </a>
  <div class="x pb65" data-component="smooth">
    <div class="pl160 pb20">
      <div class="pl115 pt115">
        {% for section in p.sections %}
          <div id="{{ section.title | slug }}" class="x max-w892">
            <h2 class="f45 ttu lsn025em mb20">{{ section.title }} +</h2>
            <div class="rich-text serif f36 mb100">
              {{ section.richText | blocksToHtml | safe }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% include 'footer.njk' %}
  </div>
</div>